<div class="container">
  <form>
    <div class="form-group">
      <label for="commentText">Comment</label>
      {{textarea id="commentText" class="form-control" rows="3" value=commentText}}
    </div>

    <div class="form-group">
      <label for="commentAuthor">Author</label>
      {{input id="commentAuthor" class="form-control" value=commentAuthor}}
    </div>

    <button class="btn btn-primary" {{action 'save'}}>Submit Comment</button>

  </form>
</div>
